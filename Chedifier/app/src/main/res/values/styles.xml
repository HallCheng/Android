    </style>

    <style name="UrlFilterActivityTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@color/search_activity_background</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
