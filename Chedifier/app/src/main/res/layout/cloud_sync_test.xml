<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff1d1d1d">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|top"
            android:layout_weight="1">

            <com.woxthebox.draglistview.DragListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cloud_list">

            </com.woxthebox.draglistview.DragListView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_cloud_data"
                android:layout_gravity="top|right"
                android:text="+"
                android:textSize="40sp"/>


        </FrameLayout>

        <com.woxthebox.draglistview.DragListView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/cloud_opt_list">

        </com.woxthebox.draglistview.DragListView>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#ffededed"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|top"
            android:layout_weight="1">

            <com.woxthebox.draglistview.DragListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/local_list">

            </com.woxthebox.draglistview.DragListView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_local_data"
                android:layout_gravity="top|right"
                android:text="+"
                android:textSize="40sp"/>

        </FrameLayout>

        <com.woxthebox.draglistview.DragListView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/local_opt_list">

        </com.woxthebox.draglistview.DragListView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ffededed"/>

    <LinearLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/sync_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:padding="3dp"
                android:textColor="#ffffff"
                android:background="#00a300"
                android:text="DOWN"/>

            <Button
                android:id="@+id/sync_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:padding="3dp"
                android:textColor="#ffffff"
                android:background="#00a300"
                android:text="UP"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>